<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_of_vehicular_details"
    android:layout_width="723dp"
    android:layout_height="900dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/m_txt_vehicle_details_model"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_price"
        android:layout_width="251dp"
        android:layout_height="56dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/m_vehicle_details_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_description"
        android:layout_width="340dp"
        android:layout_height="351dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_updated_date"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/m_vehicle_details_image"
        android:layout_width="251dp"
        android:layout_height="351dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="314dp"
        android:background="@drawable/text_border"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_updated_date"
        android:layout_width="340dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>