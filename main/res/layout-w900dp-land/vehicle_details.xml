<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_of_vehicular_details"
    android:layout_width="723dp"
    android:layout_height="900dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/m_txt_vehicle_details_model"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:textSize="25sp"
        android:text="Make Model"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_price"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:textSize="25sp"
        android:text="70000$"
        app:layout_constraintBottom_toTopOf="@+id/m_vehicle_details_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_description"
        android:layout_width="287dp"
        android:layout_height="215dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="@string/vehicle_desc"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_updated_date"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/m_vehicle_details_image"
        android:layout_width="298dp"
        android:layout_height="215dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/text_border"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ferrari"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_updated_date"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_updated_date"
        android:layout_width="228dp"
        android:layout_height="73dp"
        android:layout_marginStart="236dp"
        android:layout_marginEnd="267dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="02/02/2020"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>