<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_of_vehicular_details"
    android:layout_width="923dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/m_txt_vehicle_details_model"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_price"
        android:layout_width="218dp"
        android:layout_height="42dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/m_vehicle_details_image"
        app:layout_constraintStart_toEndOf="@+id/m_txt_vehicle_details_model" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_description"
        android:layout_width="260dp"
        android:layout_height="206dp"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_updated_date"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/m_vehicle_details_image"
        android:layout_width="218dp"
        android:layout_height="206dp"
        android:layout_marginEnd="352dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/text_border"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_updated_date"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>