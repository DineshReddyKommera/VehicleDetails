<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/m_spinner_make"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="634dp"
        android:layout_marginBottom="1198dp"
        android:overlapAnchor="false"
        android:background="@drawable/text_border"
        android:padding="5dp" />

    <Spinner
        android:id="@+id/m_spinner_model"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="635dp"
        android:layout_marginBottom="1136dp"
        android:overlapAnchor="false"
        android:background="@drawable/text_border"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1006dp"
        android:layout_below="@id/m_spinner_model"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="vertical"
        android:showDividers="middle"
        tools:context="com.example.vehicledata.MainActivity">


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/m_list_of_vehicles"
        android:name="com.example.vehicledata.VehicleDetailsFragment"
        android:layout_width="320dp"
        android:layout_height="1086dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.example.vehicledata.MainActivity"
        tools:listitem="@layout/make_model_list">

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/vehicle_detail_container"
        android:layout_width="511dp"
        android:layout_height="1086dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="3" />
</RelativeLayout>