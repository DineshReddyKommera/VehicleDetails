<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/m_spinner_make"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/text_border"
        android:padding="5dp" />

    <Spinner
        android:id="@+id/m_spinner_model"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_border"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_spinner_model"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="horizontal"
        android:showDividers="middle"
        tools:context="com.example.vehicledata.MainActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/m_list_of_vehicles"
            android:name="com.example.vehicledata.VehicleDetailsFragment"
            android:layout_width="200dp"
            android:layout_height="864dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.example.vehicledata.MainActivity"
            tools:listitem="@layout/make_model_list">

        </android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:id="@+id/vehicle_detail_container"
            android:layout_width="0dp"
            android:layout_height="860dp"
            android:layout_weight="3" />


    </LinearLayout>
</RelativeLayout>