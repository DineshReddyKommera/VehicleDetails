<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_of_vehicular_details"
    android:layout_width="516dp"
    android:layout_height="1200dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/m_txt_vehicle_details_model"
        android:layout_width="202dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="Make Model" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_price"
        android:layout_width="197dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="70000$" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_description"
        android:layout_width="359dp"
        android:layout_height="304dp"
        android:layout_below="@id/m_txt_vehicle_details_model"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="455dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="@string/vehicle_desc" />

    <ImageView
        android:id="@+id/m_txt_vehicle_details_image"
        android:layout_width="396dp"
        android:layout_height="276dp"
        android:layout_below="@+id/m_txt_vehicle_details_price"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="715dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ferrari" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_updated_date"
        android:layout_width="202dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="151dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="02/02/2020" />

</RelativeLayout>