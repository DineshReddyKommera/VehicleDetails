<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_of_vehicular_details"
    android:layout_width="923dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/m_txt_vehicle_details_model"
        android:layout_width="397dp"
        android:layout_height="56dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="Make Model"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_price"
        android:layout_width="257dp"
        android:layout_height="56dp"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="70000$"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/m_vehicle_details_image"
        app:layout_constraintStart_toEndOf="@+id/m_txt_vehicle_details_description" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_description"
        android:layout_width="377dp"
        android:layout_height="484dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="@string/vehicle_desc"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_updated_date"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/m_vehicle_details_image"
        android:layout_width="377dp"
        android:layout_height="484dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/text_border"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ferrari"
        app:layout_constraintBottom_toTopOf="@+id/m_txt_vehicle_details_updated_date"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/m_txt_vehicle_details_updated_date"
        android:layout_width="436dp"
        android:layout_height="77dp"
        android:layout_marginEnd="408dp"
        android:layout_marginBottom="368dp"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:hint="@string/no_details"
        android:padding="5dp"
        android:text="02/02/2020"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>